<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.functions">

    <androidx.appcompat.widget.Toolbar
        android:elevation="5dp"
        android:gravity="center"
        android:background="@color/app_blue"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="Enter User Email"/>




        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:id="@+id/MakeAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="make User Admin" />

        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:id="@+id/RemoveAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Admin Control" />

        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text"
            android:id="@+id/seeAdmins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Current Admins" />

        <ListView
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</RelativeLayout>