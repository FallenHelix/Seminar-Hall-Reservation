<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="15dp">
        <!--        android:background="@drawable/edit_text"-->


        <TextView
            android:id="@+id/BDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/regular"
            android:text="Hall Name"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BDate"
            android:layout_marginTop="21dp"
            android:layout_marginRight="0dp"
            android:fontFamily="@font/regular"
            android:text="start Date"

            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BDate"
            android:layout_marginTop="68dp"
            android:layout_marginRight="0dp"
            android:fontFamily="@font/regular"
            android:text="End Date: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="171dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/BDate"
            android:fontFamily="@font/regular"
            android:text="Booking Status"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/ImageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:layout_marginStart="216dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/startDate"
            android:background="@drawable/person" />

        <TextView
            android:id="@+id/TextViewPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImageStatus"
            android:layout_marginStart="54dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/endDate"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/regular"
            android:padding="2dp"
            android:text="Purpose"
            android:textAlignment="center"

            android:textColor="@android:color/black" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>