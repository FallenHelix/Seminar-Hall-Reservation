<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".homePage.profile">

    <androidx.appcompat.widget.Toolbar
        android:elevation="3dp"
        android:background="@color/app_blue"
        android:gravity="center"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="320dp"

        android:layout_below="@id/imageView4"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/TextView_name"
        android:layout_height="44dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:fontFamily="@font/r_medium"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <TextView
        android:layout_width="320dp"

        android:layout_below="@id/TextView_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/TextView_contact"
        android:layout_height="44dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/r_medium"
        android:gravity="center"
        android:hint="Contact No."
        android:paddingLeft="10dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@id/TextView_contact"
        android:layout_centerHorizontal="true"
        android:id="@+id/TextView_branch"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:fontFamily="@font/r_medium"
        android:gravity="center"
        android:hint="Branch"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />

    <TextView
        android:layout_width="320dp"

        android:layout_below="@id/TextView_branch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/TextView_roll"
        android:layout_height="44dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:fontFamily="@font/r_medium"
        android:gravity="center"
        android:hint="Roll No."
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.542" />

    <TextView
        android:layout_width="320dp"

        android:layout_below="@id/TextView_name"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/TextView_email"
        android:layout_height="44dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:fontFamily="@font/r_medium"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="57dp"
        android:layout_height="163dp"
        android:layout_below="@id/toolbar"
        android:fontFamily="@font/r_medium"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/p_b" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_marginTop="74dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Profile_photo"
        android:layout_width="132dp"
        android:layout_height="122dp"
        android:layout_marginBottom="52dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:riv_corner_radius="80dp" />

</RelativeLayout>